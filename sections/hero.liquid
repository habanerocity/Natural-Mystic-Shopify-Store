<section class="inner-hero-section">
    {% if section.settings.image != blank %}
        <img class="hero_pic" src="{{ section.settings.image | img_url: 'master'}}" alt="{{ section.settings.image.alt}}">
    {% else %}

        {% assign placeholder = 'lifestyle-2' %}
        {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div class="container py-5">
        <div class="row">
            <class class="hero_text text-light col-lg-6 col-md-8 mx-auto">
                <h1>{{section.settings.title}}</h1>
                <p class="hero_text">{{section.settings.description}}</p>
                <a class="btn btn-lg hero__button" href={{section.settings.button_link}}>{{section.settings.button_label}}</a>
            </class>
        </div>
    </div>
</section>
{% schema %}

{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Heading Background Title"
        }, {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title"
        }, {
            "type": "richtext",
            "id": "description",
            "default": "<p>Example Paragraph</p>",
            "label": "Heading Description"
        }, {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button Label"
        }, {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link"
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name": "Simple Hero"
        }
    ]
}

{% endschema %}
