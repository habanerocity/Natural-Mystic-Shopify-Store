{% paginate blog.articles by 5 %}

{% for block in section.blocks %}
    {% case block.type %}
        {% when 'blog_title' %}
            <div class="header_banner-blog position-relative text-center p-3 p-md-5">
                    <div class="col-md-5 p-lg-5 mx-auto my-5">
                        <h1 class="display-4 turmeric">{{blog.title}}</h1>
                        <p class="lead text-light">Read our latest articles</p>
                    </div>
            </div>
        {% when 'blog_grid' %}
            <div class="container my-5 p-2">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 py-5">
                    {% for article in blog.articles %}
                        <div class="col">
                            <div class="card hover-card">
                                {% if article.image.src != null %}
                                    <img src="{{ article.image.src | img_url: '500x1000' }}" class="card-img-top" alt="{{ article.image.alt }}"></img>
                                {% else %}
                                    {{ 'image' | placeholder_svg_tag: 'card-img-top'}}
                                {% endif %}
                                <div class="card-body">
                                    <h2>
                                        <a class="text-decoration-none dot blog_link" href="{{ article.url }}">{{ article.title }}</a>
                                    </h2>
                                    <h5> By: {{ article.author }}
                                            |
                                            {{ article.created_at | date: "%b %d, %Y" }}</h5>
                                  
                                    <p class="card-text">
                                        {% if article.excerpt.size > 0 %}
                                            {{ article.excerpt }}
                                        {% else %}
                                            <p>{{ article.content | strip_html | truncatewords: 100 }}</p>
                                        {% endif %}
                                    </p>
                                </div>          
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% when 'blog_pagination' %}
            <div class="container my-2">
                {% render 'pagination', paginate: paginate %}
            </div>   
            {% else %}

        
        {% endcase %}

    {% endfor %}

{% endpaginate %}

<style>
        .header_banner-blog {
        background: url({{ section.settings.banner_image | img_url: 'master'}});
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        height: 100%;
        width: 100%;
        }
        
</style>

    {% schema %}
{
    "name": "Blog Section",
    "tag": "section",
    "blocks": [
        {
            "type": "blog_title",
            "name": "Blog Title",
            "limit": 1
        },
        {
            "type": "blog_grid",
            "name": "Blog Grid",
            "limit": 1
        },
        {
            "type": "blog_pagination",
            "name": "Blog Pagination",
            "limit": 1
        }
    ],
    "settings": [
    {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Heading Background Image"
    }
    ]
}
{% endschema %}