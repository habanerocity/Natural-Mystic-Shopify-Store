<div class="container">
    <div class="row my-5">
        <h3 class="text-center">{{ page.title }}</h3>
    </div>
    <div class="accordion accordion-flush" id="accordionFAQ">
        {% for block in section.blocks %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="collapse-header-{{ block.id }}">
                    <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#collapse-{{ block.id }}" aria-expanded="false" aria-controls="{{ block.id }}" type="button">
                        {{ block.settings.title }}</button>

                </h2>
                <div aria-labelledby="collapse-header-{{ block.id }}" class="accordion-collapse collapse p-3" data-bs-parent="#accordionFAQ" id="collapse-{{ block.id }}">
                    {{ block.settings.answer }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "FAQ",
    "blocks": [
        {
            "name": "FAQ Items",
            "type": "faq",
            "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "FAQ Title"
            },
            {
                "type": "richtext",
                "id": "answer",
                "label": "Answer"
            }
            
            ]
        }
    ]
}
{% endschema %}