<div class="container py-3">
    <h1 class="text-center">The Latest From Our Blog</h1>
    <div class="parent">
        {% for article in blog.articles %}{% endfor %}
        <div class="pic1">
            {% if section.settings.image_1 != blank %}
                <img class="rounded grid_img" src="{{ section.settings.image_1 | img_url: '750x700', crop: 'left' }}" alt="{{ section.settings.image.alt}}">

            {% else %}
                {% assign placeholder = 'lifestyle-2' %}
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        </div>
        <div class="pic2">
            {% if section.settings.image_2 != blank %}
                <img class="rounded grid_img" src="{{ section.settings.image_2 | img_url: '550x434', crop: 'right' }}" alt="{{ section.settings.image.alt}}">
            {% else %}
                {% assign placeholder = 'lifestyle-2' %}
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        </div>
        <div class="pic3">
            {% if section.settings.image_3 != blank %}
                <img class="rounded grid_img" src="{{ section.settings.image_3 | img_url: '550x256', crop: 'center' }}" alt="{{ section.settings.image.alt}}">
            {% else %}
                {% assign placeholder = 'lifestyle-2' %}
                {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
        </div>
    </div>
</div>


<style>
    .parent {
        display: grid;
        grid-template-columns: 1.3fr 1fr;
        grid-template-rows: 1fr 0.6fr;
        grid-column-gap: 10px;
        grid-row-gap: 10px;
    }

    .pic1 {
        grid-area: 1 / 1 / 3 / 2;
    }

    .pic2 {
        grid-area: 1 / 2 / 2 / 3;
    }

    .pic3 {
        grid-area: 2 / 2 / 3 / 3;
    }
</style>

{% schema %}
{
  "name": "Browse Blog",
  "class": "Browse Blog Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading Title",
      "default": "The Latest From Our Blog"
    },
    {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
    },
    {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
    },
    {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
    }
  ],
  "presets": [
    {
      "category": "Browse",
      "name": "Browse Blog"
    }
  ]
}
{% endschema %}