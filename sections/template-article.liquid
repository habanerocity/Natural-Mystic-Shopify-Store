{% assign number_of_comments = article.comments_count %}
{% if comment and comment.created_at %}
    {% assign number_of_comments = article.comments_count %}
{% endif %}

{% capture author %}
    <strong>{{ article.author }}</strong>
{% endcapture %}
{% capture date %}
    <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'abbreviated_date' }}</time>
{% endcapture %}

<article itemscope itemtype="https://schema.org/BlogPosting">

    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'featured_image' %}
                {% if article.image != blank %}
                    <img src="{{ article.image | img_url: "master"}}" class="img-fluid rounded w-100" alt="">
                {% endif %}
            {% when 'title' %}
                <div class="article-title my-2">
                    <h1 class="display-4 dot mt-4">{{article.title}}</h1>
                </div>
            {% when 'article_meta' %}
                <div class="article-meta my-2">
                    <p class="lead">By
                        {{ author }}
                        published on
                        {{ date }}</p>
                </div>
            {% when 'content' %}
                <div class="my-2">{{ article.content }}</div>
            {% else %}
        {% endcase %}
    {% endfor %}


    <div class="comment-section">
        {% if blog.comments_enabled? %}
            <h2>{{ number_of_comments }}
                comments
            </h2>
            {% paginate article.comments by 5 %}
                {% for comment in article.comments %}
                    <div class="card shadow rounded-0 my-3">
                        <div class="card-header">
                            By
                            {{ comment.author }}
                            on
                            {{ comment.created_at | date: format: 'long'}}
                        </div>
                        <div class="card-body">
                            <div>{{ comment.content }}</div>
                        </div>


                    </div>
                {% endfor %}
                {% render 'pagination' %}
            {% endpaginate %}

            <div class="my-5">
                {% form 'new_comment', article %}
                    {% include 'form-error', form: form %}

                    <div class="my-5 p-4 bg-light rounded">
                        <h3 class="my-4">Let me know your thoughts</h3>
                        <div class="form-floating my-5">
                            <input class="form-control" type="text" name="comment[author]" id="CommentAuthor" placeholder="name" value="{{ form.author }}" autocapitalize="words">
                            <label for="CommentAuthor">Name</label>
                        </div>

                        <div class="form-floating my-5">
                            <input class="form-control" type="email" name="comment[email]" id="CommentEmail" placeholder="email" value="{{ form.email }}" autocorrect="off" autocapitalize="off">
                            <label for="CommentEmail">Email</label>
                        </div>

                        <div class="form-floating my-5">
                            <textarea class="form-control" id="CommentBody" name="comment[body]" placeholder="message" style="height: 120px">{{ form.body }}</textarea>
                            <label for="CommentBody">Comment</label>

                        </div>
                        <input class="btn-post" type="submit" value="Post">
                    </div>
                {% endform %}
            </div>
        {% endif %}

    </div>
</article>

{% schema %}
{
    "name": "Article Section",
    "tag": "section",
    "class": "col-md-8 col-12",
    "blocks": [
        {
            "type": "featured_image",
            "name": "Featured Image",
            "limit": 1
        },
        {
            "type": "title",
            "name": "Article Title",
            "limit": 1
        },
        {
            "type": "article_meta",
            "name": "Article Meta",
            "limit": 1
        },
        {
            "type": "content",
            "name": "Article Content",
            "limit": 1
        }
    ]
}
{% endschema %}