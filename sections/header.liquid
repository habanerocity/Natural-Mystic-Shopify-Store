<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">Navbar</a>
        <button aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-bs-target="#navbarNav" data-bs-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                {% for link in linklists.main-menu.links %}
                    {% assign child_list_handle
        = link.title | handleize %}
                    {% if linklists[child_list_handle].links !=
        blank %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                        [
                        {% for childlink in linklists[child_list_handle].links %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ childlink.url }}">{{
            childlink.title | escape
          }}</a>
                            </li>
                        {% endfor %}]
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
                <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart
                        <span class="badge bg-danger rounded-pill" id="numberOfCartItems">0</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav">
                {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                        <!-- <a href="/account">account</a> -->
                                                                                                                                                                                                                                                                                                                                                <!-- {{ "log out" | customer_logout_link }} -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ routes.account_url }}">Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ routes.account_logout_url }}">Log out</a>
                        </li>
                    {% else %}
                        <!-- {{ "log in " | customer_login_link }}
                        {{ "register" | customer_register_link }} -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ routes.account_login_url }}">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ routes.account_register_url }}">Register</a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="nav-item"></li>
            </ul>
            <form action="/search" method="GET" role="search">
                <!-- escape filter removes quotation marks from query -->
                <input type="text" name="q" value={{ search.terms | escape }} id="searchInputField">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search">Search</i>
                </button>
            </form>
        </div>
    </div>
</nav>

<div aria-labelledby="offcanvasLabel" class="offcanvas offcanvas-end" id="offCanvasSearchResult" tabindex="-1">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasLabel">Product Search Results</h5>
        <button aria-label="Close" class="btn-close text-reset" data-bs-dismiss="offcanvas" type="button"></button>
    </div>
    <div class="offcanvas-body" id="search_results_body">
        Content for the offcanvas goes here. You can place just about any Bootstrap component or custom elements here.
    </div>
</div>

