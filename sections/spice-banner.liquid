<div class="spice_banner overlay">
    <div class="spice_banner-wrapper container py-3 d-flex flex-column justify-content-center h-100">
        <h3 class="banner-new dot font-weight-boldest">
            {{section.settings.title}}
        </h3>
        <h1 class="spice_banner-title py-3 w-50 ">{{section.settings.subheading_title}}</h1>
        <h6 class="spice_banner-description w-50">{{section.settings.description}}</h6>
        <a class="btn btn-md mobile_button_shift hero__button w-25 my-2 text-dark" href={{section.settings.button_link}}>{{section.settings.button_label}}</a>
    </div>
</div>

<style>
        .spice_banner {
        background-image: url({{ section.settings.image_1 | img_url: 'master'}});
        background-repeat: no-repeat;
        background-size: cover;
        height: 35rem;
        }

        @media screen and (max-width: 787px){
            .spice_banner{
            background-image: url({{ section.settings.image_2 | img_url: 'master'}});
            }

            .spice_banner-title{
                color:#FEC016;
            } 

            .banner-new{
                color: #fff;
            }

            .spice_banner-description{
                color: #fff!important;
            } 

            .mobile_button_shift{
                color: #fff!important;
            }

            .mobile_button_shift:hover{
                color: #000!important;
            }

        }



</style>

{% schema %}
{
    "name": "banner",
    "class": "Banner section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image_1",
            "label": "Banner Background Image"
        },
        {
            "type": "image_picker",
            "id": "image_2",
            "label": "Mobile Banner Background Image"
        },
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title"
        },
        {
            "type": "text",
            "id": "subheading_title",
            "default": "Example Subheading",
            "label": "Subheading Title"
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "<p>Example Paragraph</p>",
                                                                                                                                                                                                                                                                                                                                                                                                            "label": "Heading Content"
                                                                                                                                                                                                                                                                                                                                                                                                        },
                                                                                                                                                                                                                                                                                                                                                                                                        {
                                                                                                                                                                                                                                                                                                                                                                                                            "type": "text",
                                                                                                                                                                                                                                                                                                                                                                                                            "id": "button_label",
                                                                                                                                                                                                                                                                                                                                                                                                            "default": "Button",
                                                                                                                                                                                                                                                                                                                                                                                                            "label": "Heading Button Label"
                                                                                                                                                                                                                                                                                                                                                                                                        },
                                                                                                                                                                                                                                                                                                                                                                                                        {
                                                                                                                                                                                                                                                                                                                                                                                                            "type": "url",
                                                                                                                                                                                                                                                                                                                                                                                                            "id": "button_link",
                                                                                                                                                                                                                                                                                                                                                                                                            "label": "Button Link"
                                                                                                                                                                                                                                                                                                                                                                                                        }
                                                                                                                                                                                                                                                                                                                                                                                                        ],
                                                                                                                                                                                                                                                                                                                                                                                                            "presets": [
                                                                                                                                                                                                                                                                                                                                                                                                                {
                                                                                                                                                                                                                                                                                                                                                                                                                 "category": "Banner",
                                                                                                                                                                                                                                                                                                                                                                                                                 "name": "Spice Banner"
                                                                                                                                                                                                                                                                                                                                                                                                                }
                                                                                                                                                                                                                                                                                                                                                                                                            ]
                                                                                                                                                                                                                                                                                                                                                                                                                    }
{% endschema %}